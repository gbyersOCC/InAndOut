<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.gbyers.inandout.OrderActivity"
    android:columnCount="7"
    android:background="@drawable/order_background"
    android:rowOrderPreserved="false"
    android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/header_label"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="7"
        android:textColor="@color/primary_dark_material_dark"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/double_double"
        android:id="@+id/textView2"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"
        android:layout_row="1"
        android:gravity="end"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/double_price"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_column="4"
        android:layout_row="1"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="fill_horizontal"/>

    <EditText
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/doubleEdit"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_gravity="fill_horizontal"
        android:paddingTop="15dp"
        android:layout_columnSpan="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="@string/cheeseburger"
        android:id="@+id/textView4"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheeseburger_price"
        android:id="@+id/textView5"
        android:layout_column="4"
        android:layout_row="2"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/cheeseburgerEdit"
        android:layout_column="5"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:padding="1dp"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/french_fries"
        android:id="@+id/textView6"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="3"
        android:gravity="center|right"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/french_price"
        android:id="@+id/textView7"
        android:layout_column="4"
        android:gravity="center"
        android:layout_row="3"
        android:layout_gravity="fill_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/frenchFryEdit"
        android:layout_column="5"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:padding="1dp"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shakes"
        android:id="@+id/textView8"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_price"
        android:id="@+id/textView12"
        android:layout_gravity="fill_horizontal"
        android:layout_column="4"
        android:layout_row="4"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/shakeEdit"
        android:layout_gravity="fill_horizontal"
        android:layout_column="5"
        android:layout_columnSpan="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fountain_label"
        android:id="@+id/textView9"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/small"
        android:id="@+id/textView10"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="6"
        android:gravity="right"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/small_price"
        android:id="@+id/textView13"
        android:gravity="center_horizontal"
        android:layout_gravity="fill_horizontal"
        android:layout_column="4"
        android:layout_row="6"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/smallEdit"
        android:layout_gravity="fill_horizontal"
        android:layout_column="5"
        android:layout_columnSpan="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medium"
        android:id="@+id/textView11"
        android:layout_row="7"
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:gravity="right"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medium_price"
        android:id="@+id/textView14"
        android:layout_gravity="fill_horizontal"
        android:layout_column="4"
        android:layout_row="7"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mediumEdit"
        android:layout_gravity="fill_horizontal"
        android:layout_column="5"
        android:layout_columnSpan="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/large"
        android:id="@+id/textView15"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/large_price"
        android:id="@+id/textView16"
        android:gravity="center_horizontal"
        android:layout_column="4"
        android:layout_row="8"
        android:layout_gravity="fill_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/largeEdit"
        android:layout_gravity="fill_horizontal"
        android:layout_column="5"
        android:layout_columnSpan="2"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_columnSpan="7"
        android:paddingTop="15dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_button"
            android:id="@+id/orderButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:onClick="activateOrderSummary"/>
    </FrameLayout>

</GridLayout>
